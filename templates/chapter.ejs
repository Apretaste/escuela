<div class="row">
    <div class="col s12">
        <h1><%= chapter.title %></h1>
        <%- chapter.content %>
    </div>
</div>

<% if (chapter.xtype == 'PRUEBA') { %>
	<div class="row">
		<div class="col s12">
            <% if (chapter.terminated) { %>
            <p align="center" style="background-color:<% if ( chapter.calification >=80) {%> green <%} else { %>#C11414<% } %>; color:white; padding:5px;">
                <b>Terminada con <%= chapter.calification %> puntos de 100</b>
            </p>
            <% } %>

            <% chapter.questions.forEach(function(question) { %>
               <%= question.title %><br/>
                    <% question.answers.forEach(function(answer){ %>
                    <% if (question.terminated) { %>
                        <% if (question.answer_choosen == answer.id) { %>
                            -&nbsp;<b><%= answer.title %></b>
                        <% } else { %>
                            -&nbsp;<%= answer.title %>
                        <% } %>
                        <% if (question.answer == answer.id) { %>
                            <span style="color:gray;">&#10004;</span>
                        <% } %> <br/>
                    <% } else { %>
                    <% var checked = answer.choosen ? 'checked' : '' %>
                    <label>
                        <input class="with-gap answer" name="<%= question.id %>" value="<%= answer.id %>" <%= checked %> type="radio"/>
                        <span><%= answer.title %></span>
                    </label>

                    <a href="#!" class="link link-simple" data-command="ESCUELA RESPONDER" data-query="<%= answer.id %>"></a><br/>
                    <% } %>

                    <% }); %>
            <% }); %>
		</div>
	</div>

	<% if (!chapter.terminated) { %>
        <div class="row left-align" style="margin-bottom: 0;">
            <!-- SAVE BUTTON -->
            <div class="col s12"><a class="btn-floating btn-large waves-effect waves-light" href="#!" onclick="submitTest()"><i class="material-icons">send</i></a></div>
        </div>
	<% } %>
<% } %>

<% if (chapter.xtype != 'PRUEBA') { %>
<div class="row" style="margin-bottom: 0;">
    <div class="col s12 left-align">
    <% if (!(chapter.xtype == 'PRUEBA' && course.all_chapters_finished)) { %>
        <% if (after) { %>
			<a href="#!" class="link link-simple waves-effect waves-light btn-floating btn-large" data-command = "ESCUELA <%= after.xtype %>" data-query="<%= after.id %>"><i class="material-icons">arrow_forward</i></a>
        <% } %>
	<% } %>
    </div>
</div>
<% } %>￼￼

<div class="fixed-action-btn">
<% if (!before) { %>
		<a class="btn-floating btn-large link link-simple grey darken-3" data-command = "ESCUELA CURSO" data-query="<%= chapter.course %>"><i class="material-icons">format_list_numbered</i></a>
	<% } else {%>
	<a class="btn-floating btn-large grey darken-3">
		<i class="large material-icons">menu</i>
	</a>
	<ul>
		<li><a href="#!" class="btn-floating btn-small link link-simple grey darken-3" data-command = "ESCUELA <%= before.xtype %>" data-query="<%= before.id %>"><i class="material-icons">arrow_back</i></a></li>
		<li><a class="btn-floating btn-small link link-simple grey darken-3" data-command = "ESCUELA CURSO" data-query="<%= chapter.course %>"><i class="material-icons">format_list_numbered</i></a></li>
	</ul>
  <% } %>
</div>
