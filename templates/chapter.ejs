<div class="row">
    <div class="col s12 m12 l12 xl12">
        <h1><%= chapter.title %></h1>

        <%- chapter.content %>
    </div>
</div>

<div class="row">
    <div class="col s12 m12 l12 xl12">

        <% if (chapter.xtype == 'PRUEBA') { %>
            <% if (chapter.terminated) { %>
            <p align="center" style="background-color:<% if ( chapter.calification >=80) {%> green <%} else { %>#C11414<% } %>; color:white; padding:5px;">
                <b>Terminada con <%= chapter.calification %> puntos de 100</b>
            </p>
            <% } %>

            <% chapter.questions.forEach(function(question) { %>
               <%= question.title %><br/>
                    <% question.answers.forEach(function(answer){ %>
                    <% if (question.terminated) { %>
                        <% if (question.answer_choosen == answer.id) { %>
                            -&nbsp;<b><%= answer.title %></b>
                        <% } else { %>
                            -&nbsp;<%= answer.title %>
                        <% } %>
                        <% if (question.answer == answer.id) { %>
                            <span style="color:gray;">&#10004;</span>
                        <% } %> <br/>
                    <% } else { %>
                    <% var checked = answer.choosen ? 'checked' : '' %>
                    <label>
                        <input class="with-gap answer" name="<%= question.id %>" value="<%= answer.id %>" <%= checked %> type="radio"/>
                        <span><%= answer.title %></span>
                    </label>

                    <a href="#!" class="link link-simple" data-command="ESCUELA RESPONDER" data-query="<%= answer.id %>"></a><br/>
                    <% } %>

                    <% }); %>
                    <br/>
            <% }); %>
            <br/> <br/>
            <% if (!chapter.terminated) { %>
            <div class="row left-align">
                <!-- SAVE BUTTON -->
                	<div class="col s12"><a class="btn tiny waves-effect waves-light" href="#!" onclick="submitTest()">Enviar</a></div>
            </div>
            <% } %>
        <% } %>
    </div>
</div>

<% if (chapter.xtype != 'PRUEBA') { %>
<div class="row">
    <div class="col s12 left-align">
    <% if (!(chapter.xtype == 'PRUEBA' && course.all_chapters_finished)) { %>
        <% if (before) { %>
        <a href="#!" class="link link-simple waves-effect waves-light btn tiny" data-command = "ESCUELA <%= before.xtype %>" data-query="<%= before.id %>"><i class="material-icons left">arrow_back</i>Anterior</a> &nbsp;
        <% } %>
        <% if (after) {%>
            <a href="#!" class="link link-simple waves-effect waves-light btn tiny" data-command = "ESCUELA <%= after.xtype %>" data-query="<%= after.id %>"><i class="material-icons right">arrow_forward</i>Siguiente</a>
        <% } %>
	<% } %>
	<div class="space5"></div>
	</div>
</div>
<% } %>


<div class="fixed-action-btn">
    <a href="#!" class="link link-simple waves-effect waves-light btn btn-floating btn-large floating-action" data-command = "ESCUELA CURSO" data-query="<%= chapter.course %>"><i class="material-icons">format_list_numbered</i></a>
</div>
