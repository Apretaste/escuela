<div class="row">
    <div class="col s12">
        <% if (courses.length == 0) {%> <!-- si no esta registrado en ningun curso debe decir ... -->
        <h1>Usted no tiene cursos terminados. Vaya al inicio y escoja un curso para empezar a estudiar.</h1>
        <% } else { %>
        <h1>Terminados</h1>
        <% courses.forEach(function(e, i) { %>
            <div class="card blue-grey darken-1 hoverable">
                <div class="card-content white-text" style="height: auto;">
                    <span class="card-title"><%= e.title %></span>
                    <p class="space5">
                        <% for(var k = 0; k < e.stars; k++) {%>
                        <i class="material-icons">star</i>
                        <% } %>
                        <% for(var k = 0; k < max_stars - e.stars; k++) {%>
                        <i class="material-icons">star_border</i>
                        <% } %>
                    </p>
                    <p class="space5"><%= parseInt(e.calification) %> puntos obtenidos</p>
                </div>
                <div class="card-action">
                    <a href="#!" class="link link-simple" data-command="ESCUELA CURSO" data-query="<%= e.id %>">Ir al curso</a>
                </div>
            </div>

        <% }); %>

        <% }%>
    </div>
</div>
