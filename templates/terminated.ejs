<div class="row">
    <div class="col s12 m12 l12 xl12">
        <h1 style="font-size: 1.5rem; text-align:center;">Cursos terminados por ti </h1>
    </div>
</div>
<div class="row">
    <div class="col s12 m12 l12 xl12">
        <% if (courses.length == 0) {%> <!-- si no esta registrado en ningun curso debe decir ... -->
        <p>Usted no tiene cursos terminados. Vaya al inicio y escoja un curso para empezar a estudiar.</p>
        <% } else { %>
        <% courses.forEach(function(e, i) { %>
            <div class="card small blue-grey darken-1 hoverable">
                <div class="card-content white-text">
                    <span class="card-title"><%= e.title %></span>
                    <p>Por <a href="#" class="link link-simple" data-command = "ESCUELA BUSCAR" data-query="{author: courses[<%= i %>].teacher}"><%= e.professor %></a></p>
                    <p class="space5">
                        <% for(var k = 0; k < e.stars; k++) {%>
                        <i class="material-icons">star</i>
                        <% } %>
                        <% for(var k = 0; k < max_stars - e.stars; k++) {%>
                        <i class="material-icons">star_border</i>
                        <% } %>
                    </p>
                </div>
                <div class="card-reveal">
				<span class="card-title grey-text text-darken-4">
					<i class="material-icons right">close</i>
				</span>
                    <p><%= e.content %></p>
                    <p class="space5">Categoria: <a href="#" class="link link-simple" data-command = "ESCUELA BUSCAR" data-query="{category: courses[<%= i %>].category}"><%= e.category %></a></p>
                </div>
                <div class="card-action">
                    <a href="#!" class="link link-simple" data-command="ESCUELA CURSO" data-query="<%= e.id %>">Ir al curso</a>
                    <i class="material-icons card-title right activator white-text">more_horiz</i>
                </div>
            </div>

        <% }); %>

        <% }%>
    </div>
</div>
