<div class="row">
    <div class="col s12">
        <% if(Object.keys(data).length > 0){ %>
            <div class="tags">
                <div class="chip tiny"><%= categories[data.category] %></div>
                <div class="chip tiny" id="authorChip"></div>
                <div class="chip tiny"><%= data.raiting + '+' %></div>
            </div>
        <% } %>

        <% if (completed == 0) { %>
            <!-- si no esta registrado en ningun curso debe decir ... -->
            <% if (courses.length > 0){ %>
                <span>Escoja un curso para empezar a estudiar, ganar niveles y medallas.</span>
            <% } else { %>
                <p class="middle-center center-align">No se encontraron cursos.</p>
            <% } %>
        <% } else { %>
            <p>Usted ha completado <%= completed %> cursos y tiene <b><%= level %></b></p>
            <p>A continuaci&oacute;n sus cursos empezados.</p>
        <% } %>
    </div>
</div>

<div class="row">
    <% courses.forEach(function(e, i) { %>
        <div class="col s12 m6">
            <div class="card">
                <div class="card-content">
                    <span class="card-title"><%= e.title %></span>

                    <div class="progress">
                        <div class="determinate" style="width: <%= e.progress %>%"></div>
                    </div>

                    <p>
                        Por <a href="#" class="link link-simple" data-command="ESCUELA"
                               data-query="{author: courses[<%= i %>].teacher}"><%= e.professor %></a>
                        <% if (e.category != null){ %> ‚óè
                        <a href="#" class="link link-simple" data-command="ESCUELA"
                           data-query="{category: courses[<%= i %>].category}"><%= jsUcfirst(e.category.toLowerCase()) %></a>
                        <% } %>
                    </p>

                    <p class="space5">
                        <% for(var k = 0; k < e.stars; k++) { %>
                            <i class="material-icons">star</i>
                        <% } %>
                        <% for(var k = 0; k < max_stars - e.stars; k++) { %>
                            <i class="material-icons">star_border</i>
                        <% } %>
                    </p>
                </div>

                <div class="card-reveal">
                    <span class="card-title grey-text text-darken-4">
                        <i class="material-icons right">close</i>
                    </span>
                    <p><%= e.content %></p>
                </div>


                <div class="card-action grey lighten-4">
                    <a href="#!" class="link link-simple" data-command="ESCUELA CURSO" data-query="<%= e.id %>">Ir al
                        curso</a>
                    <i class="material-icons card-title right activator">more_horiz</i>
                </div>
            </div>
        </div>
    <% }); %>

    <div class="fixed-action-btn">
        <a href="#search-modal" class="btn-floating btn-large modal-trigger">
            <i class="material-icons">search</i>
        </a>
    </div>
</div>

<div class="modal bottom-sheet" id="search-modal" style="max-height: none; height: 70vh;">
    <div class="modal-content" style="margin-bottom: 3rem">
        <h1>Buscar</h1>
        <form class="row" style="margin-bottom: 0;">
            <div class="input-field col s4 x12">
                <select id="category" class="input">
                    <% for (var value in categories) { %>
                        <option value="<%= value %>"><%= categories[value] %></option>
                    <% } %>
                </select>
                <label for="category">Categor&iacute;a</label>
            </div>

            <div class="input-field col s4 x12">
                <select id="author">
                    <option value="ALL">Todos</option>
                    <% authors.forEach(function(author){ %>
                        <option value="<%= author.id %>"><%= author.name %></option>
                    <% }); %>
                </select>
                <label for="author">Autor:</label>
            </div>
            <div class="input-field col s4 x12">
                <select id="raiting">
                    <option value="0">Todos</option>
                    <option value="1">1+</option>
                    <option value="2">2+</option>
                    <option value="3">3+</option>
                    <option value="4">4+</option>
                    <option value="5">5</option>
                </select>
                <label for="raiting">Popularidad:</label>
            </div>
        </form>
    </div>

    <div class="fixed-action-btn">
        <a id="btnSearch" class="btn-floating btn-large"><i class="material-icons">search</i></a>
    </div>
</div>