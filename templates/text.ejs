<div class="row">
	<div class="col s12 center">
		<h1 class="black-text"><%= header %></h1>
		<i class="material-icons large"><%= icon %></i>
		<p><%- text %></p>

		<% if (typeof showRate !== 'undefined') if (showRate) { %>
			<div class="row">
				<div class="col s12 center-align">
					<div id="rate-stars">
						Valore este curso: <br/>
						<% for(var k = 0; k < 5; k++) {%>
							<a href="#!" class="star-link" onclick = "submitRate(<%= courseId %>,<%= k %>);"><i class="material-icons">star_border</i></a>
						<% } %>
					</div>
				</div>
			</div>
		<% } %>
		<br/>
		<a class="waves-effect waves-light btn" href="#!" onclick="apretaste.send({'command':'<%= button['href'] %>', data:{query: '<%= button['query'] %>'}});">
			<%= button['caption'] %>
		</a>
	</div>
</div>