
<div class="row">
    <div class="col s12">
        <h1>Buscar</h1>
        <form class="row">
           <!-- <div class="input-field col s6 m6 l6 xl6">
                <label for="title">T&iacute;tulo:</label>
                <input id="title" type="text" class="validate" >
            </div> -->
            <div class="input-field col s4 x12">
                <select id="category" class="input">
                    <option value="ALL">Todas</option>
                    <% for (var value in categories) { %>
                    <option value="<%= value %>"><%= categories[value] %></option>
                    <% }%>
                </select>
                <label for="category">Categor&iacute;a</label>
            </div>

            <div class="input-field col s4 x12">
                <select id="author">
                    <option value="ALL">Todos</option>
                    <% authors.forEach(function(author){ %>
                    <option value="<%= author.id %>"><%= author.name %></option>
                    <% });%>
                </select>
                <label for="author">Autor:</label>
            </div>
            <div class="input-field col s4 x12">
                <select id="raiting">
                    <option value="0">Todos</option>
                    <option value="1">1+</option>
                    <option value="2">2+</option>
                    <option value="3">3+</option>
                    <option value="4">4+</option>
                    <option value="5">5</option>
                </select>
                <label for="raiting">Popularidad:</label>
            </div>
        </form>
    </div>
</div>

<div class="fixed-action-btn">
	<a id="btnSearch" class="btn-floating btn-large"><i class="material-icons">search</i></a>
</div>

<% if (noResults) { %>
<div class="row">
    <div class="col s12">
        No se encontraron cursos.
    </div>
</div>
<% } %>

<div class="row">
    <% courses.forEach(function(e, i) { %>
    <div class="col s12 m6 l4">
        <div class="card blue-grey darken-1 hoverable">
            <div class="card-content white-text">
                <span class="card-title"><%= e.title %></span>
                <p>Por <a href="#" class="link link-simple" data-command = "ESCUELA BUSCAR" data-query="{author: courses[<%= i %>].teacher}"><%= e.professor %></a></p>
                <p class="space5">
                    <% for(var k = 0; k < e.stars; k++) {%>
                    <i class="material-icons">star</i>
                    <% } %>
                    <% for(var k = 0; k < max_stars - e.stars; k++) {%>
                    <i class="material-icons">star_border</i>
                    <% } %>
                </p>
            </div>
            <div class="card-reveal">
				<span class="card-title grey-text text-darken-4">
					<i class="material-icons right">close</i>
				</span>
                <p><%= e.content %></p>
                <p class="space5">Categoria: <a href="#" class="link link-simple" data-command = "ESCUELA BUSCAR" data-query="{category: courses[<%= i %>].category}"><%= e.category %></a></p>
            </div>
            <div class="card-action">
                <a href="#!" class="link link-simple" data-command="ESCUELA CURSO" data-query="<%= e.id %>">Empezar</a>
                <i class="material-icons card-title right activator white-text">more_horiz</i>
            </div>
        </div>
    </div>
    <% }); %>
</div>